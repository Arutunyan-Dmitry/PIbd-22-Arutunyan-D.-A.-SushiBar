@{ ViewData["Title"] = "AddIngredient"; }

<h1>Пополнение склада</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label class="control-label">Склад</label>
                <select name="StorageFacilityId" class="form-control" asp-items="@(new SelectList(ViewBag.StorageFacilities, "Id", "Name"))"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Ингредиенты</label>
                <select name="IngredientId" class="form-control" asp-items="@(new SelectList(ViewBag.Ingredients, "Id", "IngredientName"))"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Количество</label>
                <input type="text" class="form-control" name="Count" placeholder="Количество" />
            </div>
            <div class="form-group">
                <input type="submit" value="Пополнить" class="btn btn-primary" />
                <a style="margin-left: 10px;" asp-action="Index">Назад</a>
            </div>
        </form>
    </div>
</div>